        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Core.Windows.QuotationsWindows.TermsWindows"
        xmlns:CN="clr-namespace:Core.Controls"
        mc:Ignorable="d"
        Title="Terms &amp; Conditions"
        Style="{StaticResource WindowStyle}"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        WindowStartupLocation="CenterScreen"
        Height="550"
        Width="1040">
    <Window.Resources>

        <ContextMenu x:Key="NoItemContextMenu" FontFamily="Times New Roman">
            <MenuItem Click="Add_Click">
                <MenuItem.Header>
                    <TextBlock Text="New"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/Add.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="DefaultItemContextMenu" FontFamily="Times New Roman">
            <MenuItem Click="Copy_Click">
                <MenuItem.Header>
                    <TextBlock Text="Copy"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/Copy.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Click="Add_Click">
                <MenuItem.Header>
                    <TextBlock Text="New"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/Add.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Click="MoveUp_Click">
                <MenuItem.Header>
                    <TextBlock Text="Move Up"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/MoveUp.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Click="MoveDown_Click">
                <MenuItem.Header>
                    <TextBlock Text="Move Down"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/MoveDown.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </MenuItem.Icon>
            </MenuItem>
        </ContextMenu>

        <ContextMenu x:Key="ItemContextMenu" FontFamily="Times New Roman">
            <MenuItem Click="Copy_Click">
                <MenuItem.Header>
                    <TextBlock Text="Copy"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/Copy.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator/>
            <MenuItem Click="Add_Click">
                <MenuItem.Header>
                    <TextBlock Text="New"/>
                </MenuItem.Header>
                <MenuItem.Icon>
                    <Image Source="/Images/Add.png" RenderOptions.BitmapScalingMode="HighQuality"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem Click="Edit_Click">
                <MenuItem.Header>
                    <TextBlock Text="Edit"/>
                </MenuItem.Header>
                <MenuItem.Icon>
