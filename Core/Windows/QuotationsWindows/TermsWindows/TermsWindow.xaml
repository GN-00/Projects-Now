                            <ListBox Name="Delivery"
                                     Margin="5"
                                     BorderBrush="Transparent"
                                     FontSize="20" 
                                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                                     PreviewMouseRightButtonUp="ListBox_PreviewMouseRightButtonUp"
                                     FontFamily="Times New Roman">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="700"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="» " VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="Blue" FontWeight="Bold"/>
                                            <TextBlock Grid.Column="1" x:Name="Condition" Width="650" Text="{Binding Condition}" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                                            <CheckBox Grid.Column="2" IsChecked="{Binding IsUsed}" Style="{StaticResource CheckBoxStyle}" HorizontalAlignment="Center"/>
                                        </Grid>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsDefault}" Value="true">
                                                <Setter Property="Foreground" TargetName="Condition" Value="Red"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                    </StackPanel>

                </TabItem>

                <TabItem x:Name="GuaranteeTab" Height="50">
                    <TabItem.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border Name="Border" BorderThickness="0,0,0,0" BorderBrush="White" CornerRadius="5,0,0,5">
                                            <TextBlock x:Name="TB" Text="Guarantee" Style="{StaticResource TabStyle}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                                <Setter TargetName="TB" Property="TextBlock.Foreground" Value="Red"/>
                                                <Setter TargetName="Border" Property="Border.Effect">
                                                    <Setter.Value>
                                                        <DropShadowEffect Color="Black" Direction="-90" ShadowDepth="1" BlurRadius="5" Opacity="0.8" />
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                    <Condition Property="IsSelected" Value="False"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Border" Property="Background" Value="Red"/>
                                            </MultiTrigger>
                                            <MultiTrigger>
                                                <MultiTrigger.Conditions>
                                                    <Condition Property="IsMouseOver" Value="True"/>
                                                    <Condition Property="IsSelected" Value="True"/>
                                                </MultiTrigger.Conditions>
                                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                            </MultiTrigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabItem.Resources>

                    <StackPanel Orientation="Vertical">

                        <TextBlock Text="Guarantee" FontSize="32" FontStyle="Italic" Foreground="#FF9211E8" Margin="20" VerticalAlignment="Center" />

                        <Border Margin="20,0" BorderBrush="Gray" BorderThickness="2" CornerRadius="5" Height="320">
                            <ListBox Name="Guarantee"
                                     Margin="5"
                                     BorderBrush="Transparent"
                                     FontSize="20" 
                                     ScrollViewer.VerticalScrollBarVisibility="Visible"
                                     PreviewMouseRightButtonUp="ListBox_PreviewMouseRightButtonUp"
                                     FontFamily="Times New Roman">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="700"/>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" Text="» " VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="Blue" FontWeight="Bold"/>
                                            <TextBlock Grid.Column="1" x:Name="Condition" Width="650" Text="{Binding Condition}" TextWrapping="Wrap" HorizontalAlignment="Left"/>
                                            <CheckBox Grid.Column="2" IsChecked="{Binding IsUsed}" Style="{StaticResource CheckBoxStyle}" HorizontalAlignment="Center"/>
                                        </Grid>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding IsDefault}" Value="true">
                                                <Setter Property="Foreground" TargetName="Condition" Value="Red"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                    </StackPanel>

                </TabItem>

            </TabControl>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Margin="0,0,20,10">
                <Button Click="Save_Click" Style="{StaticResource SaveButton}"/>
                <Button Click="Cancel_Click" Style="{StaticResource CancelButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
